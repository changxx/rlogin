#set($title = "登录")
<script src="$!{context}/res/js/gjj.js"></script>

<form method="post" class="input-group">
    <div class="input-row">
        <label>证件号码：</label>
        <input type="text" name="account" id="account" placeholder="证件号码">
    </div>
    <div class="input-row">
        <label>密 码：</label>
        <input type="password" name="password" id="password" placeholder="密码">
    </div>
    <div class="input-row">
        <label>验证码：</label>
        <input type="text" name="vericode" id="vericode" placeholder="验证码">
        <img style="  position: absolute; margin-left: 100px; margin-top: 7px;" src="$!{context}/gjj/vericode"/>
    </div>
    <br/>
    <a id="login" class="btn btn-positive btn-block" onclick="gjj.login();return false;">登录</a>
</form>

